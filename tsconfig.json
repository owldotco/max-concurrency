{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
     "declaration": true,
     "declarationMap": true,
     "sourceMap": true,
     "isolatedModules": true,
    "strict": true,
    "esModuleInterop": true,
     "experimentalDecorators": true,
     "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "test"]
}
